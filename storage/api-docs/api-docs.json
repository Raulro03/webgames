    "components": {
        "schemas": {
            "Comment": {
                "title": "Comment",
                "description": "Estructura del comentario en la API",
                "required": [
                    "id",
                    "body",
                    "published_at",
                    "post_id",
                    "user_id",
                    "category_id"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del comentario",
                        "type": "integer",
                        "example": 1
                    },
                    "body": {
                        "description": "Contenido del comentario",
                        "type": "string",
                        "example": "Este es un comentario de prueba"
                    },
                    "published_at": {
                        "description": "Fecha y hora en que se publicó el comentario",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-02-21T13:00:20.000000Z"
                    },
                    "parent": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/Comment"
                            }
                        ],
                        "nullable": true,
                        "description": "Comentario padre si es una respuesta"
                    },
                    "replies": {
                        "description": "Lista de respuestas a este comentario",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Comment"
                        }
                    }
                },
                "type": "object"
            },
            "Post": {
                "title": "Post",
                "description": "Estructura de un post en la API",
                "required": [
                    "id",
                    "title",
                    "body",
                    "status",
                    "published_at"
                ],
                "properties": {
                    "id": {
                        "description": "ID del post",
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "description": "Título del post",
                        "type": "string",
                        "example": "Título del post"
                    },
                    "body": {
                        "description": "Cuerpo del post",
                        "type": "string",
                        "example": "Contenido del post"
                    },
                    "status": {
                        "description": "Estado del post",
                        "type": "string",
                        "example": "published"
                    },
                    "published_at": {
                        "description": "Fecha y hora de publicación",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-02-22T14:30:00Z"
                    },
                    "comments": {
                        "description": "Lista de comentarios asociados al post",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Comment"
                        }
                    }
                },
                "type": "object"
            },
            "Games": {
                "required": [
                    "id",
                    "title",
                    "developer_id",
                    "release_date"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "The Legend of Zelda: Breath of the Wild"
                    },
                    "description": {
                        "type": "string",
                        "example": "The Legend of Zelda: Breath of the Wild es un videojuego de acción-aventura de 2017 desarrollado y publicado por Nintendo para la consola Nintendo Switch y Wii U."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2017-03-03"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 59.99
                    },
                    "average_rating": {
                        "type": "number",
                        "format": "float",
                        "example": 4.9
                    },
                    "image_url": {
                        "type": "string",
                        "example": "https://example.com/image.jpg"
                    },
                    "developer_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Platform": {
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "PlayStation 5"
                    },
                    "description": {
                        "type": "string",
                        "example": "La PlayStation 5 es una consola de videojuegos de sobremesa desarrollada por Sony Interactive Entertainment. Anunciada en 2019 como la sucesora de la PlayStation 4, se lanzó el 12 de noviembre de 2020 en Australia, Japón, Nueva Zelanda, América del Norte y Corea del Sur, y el 19 de noviembre de 2020 en el resto del mundo."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2020-11-12"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 499.99
                    },
                    "average_rating": {
                        "type": "number",
                        "format": "float",
                        "example": 4.5
                    },
                    "image_url": {
                        "type": "string",
                        "example": "https://example.com/image.jpg"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    },
