        "/api/games/{id}": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Obtener todos los juegos",
                "operationId": "48fb06317bf9e8f10c22dd892ff7425e",
                "parameters": [
                    {
                        "name": "id",
