    "components": {
        "schemas": {
            "Comment": {
                "title": "Comment",
                "description": "Estructura del comentario en la API",
                "required": [
                    "post_id",
                    "user_id",
                    "body",
                    "published_at"
                ],
                "properties": {
                    "id": {
                        "description": "ID autoincremental del comentario (generado automáticamente)",
                        "type": "integer",
                        "readOnly": true,
                        "example": 1
                    },
                    "post_id": {
                        "description": "ID del post al que pertenece el comentario",
                        "type": "integer",
                        "example": 3
                    },
                    "user_id": {
                        "description": "ID del usuario que escribió el comentario",
                        "type": "integer",
                        "example": 5
                    },
                    "body": {
                        "description": "Contenido del comentario",
                        "type": "string",
                        "example": "Este es un comentario de prueba"
                    },
                    "published_at": {
                        "description": "Fecha en la que se publicó el comentario",
                        "type": "string",
                        "format": "date",
                        "example": "2025-04-29"
                    },
                    "parent_id": {
                        "description": "ID del comentario padre si este comentario es una respuesta",
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    },
                    "created_at": {
                        "description": "Fecha de creación del comentario",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-04-29T10:30:00Z"
                    },
                    "updated_at": {
                        "description": "Fecha de última actualización del comentario",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-04-29T11:00:00Z"
                    }
                },
                "type": "object"
            },
            "Post": {
                "description": "Estructura de un post en la API",
                "required": [
                    "user_id",
                    "category_id",
                    "title",
                    "body",
                    "status",
                    "published_at"
                ],
                "properties": {
                    "id": {
                        "description": "ID autoincremental del post (generado automáticamente)",
                        "type": "integer",
                        "readOnly": true,
                        "example": 1
                    },
                    "user_id": {
                        "description": "ID del usuario que creó el post",
                        "type": "integer",
                        "example": 5
                    },
                    "category_id": {
                        "description": "ID de la categoría del foro",
                        "type": "integer",
                        "example": 2
                    },
                    "title": {
                        "description": "Título del post",
                        "type": "string",
                        "example": "Título del post"
                    },
                    "body": {
                        "description": "Cuerpo del post",
                        "type": "string",
                        "example": "Contenido detallado del post"
                    },
                    "status": {
                        "description": "Estado del post",
                        "type": "string",
                        "example": "published"
                    },
                    "published_at": {
                        "description": "Fecha de publicación",
                        "type": "string",
                        "format": "date",
                        "example": "2025-04-29"
                    },
                    "created_at": {
                        "description": "Fecha de creación",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-04-29"
                    },
                    "updated_at": {
                        "description": "Fecha de última modificación",
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-04-29"
                    },
                    "deleted_at": {
                        "description": "Fecha de borrado lógico (soft delete)",
                        "type": "string",
                        "format": "date-time",
                        "example": "null",
                        "nullable": true
                    },
                    "comments": {
                        "description": "Lista de comentarios asociados al post",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Comment"
                        }
                    }
                },
                "type": "object"
            },
            "Games": {
                "required": [
                    "id",
                    "title",
                    "developer_id",
                    "release_date"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "The Legend of Zelda: Breath of the Wild"
                    },
                    "description": {
                        "type": "string",
                        "maxLength": 200,
                        "example": "The Legend of Zelda: Breath of the Wild es un videojuego de acción-aventura de 2017 desarrollado y publicado por Nintendo para la consola Nintendo Switch y Wii U."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2017-03-03"
                    },
                    "price": {
                        "type": "integer",
                        "example": 5999
                    },
                    "average_rating": {
                        "type": "number",
                        "format": "float",
                        "maximum": 9.99,
                        "minimum": 0,
                        "example": 4.9
                    },
                    "image_url": {
                        "type": "string",
                        "example": "images/games/residentevil.png"
                    },
                    "developer_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Platform": {
                "required": [
                    "id",
                    "name",
                    "release_date"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 50,
                        "example": "PlayStation 5"
                    },
                    "description": {
                        "type": "string",
                        "maxLength": 100,
                        "example": "La PlayStation 5 es una consola de videojuegos de sobremesa desarrollada por Sony Interactive Entertainment."
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2020-11-12"
                    },
                    "price": {
                        "type": "integer",
                        "example": 4990
                    },
                    "average_rating": {
                        "type": "number",
                        "format": "float",
                        "maximum": 9.99,
                        "minimum": 0,
                        "example": 4.5
                    },
                    "image_url": {
                        "type": "string",
                        "example": "images/platforms/nintendo.png"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Token personal generado por Sanctum",
                "bearerFormat": "Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Comments",
            "description": "Endpoints para gestionar los comentarios"
        },
        {
            "name": "Posts",
            "description": "Endpoints para la gestión de posts en el foro"
        },
        {
            "name": "Games",
            "description": "Endpoints para mostrar los juegos"
        },
        {
            "name": "Platforms",
            "description": "Endpoints para la gestión de plataformas"
        }
    ]
}