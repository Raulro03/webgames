                    "403": {
                        "description": "No autorizado para eliminar este comentario"
                    },
                    "404": {
                        "description": "Comentario no encontrado"
                    },
                    "405": {
                        "description": "Logueate"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
