                    },
                    "403": {
                        "description": "No autorizado para actualizar este comentario"
                    },
                    "404": {
                        "description": "Comentario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
